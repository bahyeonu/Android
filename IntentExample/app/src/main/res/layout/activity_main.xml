<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id = "@+id/btnCall"
        android:text = "전화 걸기"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnWeb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id = "@+id/btnWeb"
        android:text = "구글 페이지 열기"
        app:layout_constraintTop_toBottomOf="@id/btnCall"
        app:layout_constraintBottom_toTopOf="@id/btnGmap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id = "@+id/btnGmap"
        android:text = "구글 맵 열기"
        app:layout_constraintTop_toBottomOf="@id/btnWeb"
        app:layout_constraintBottom_toTopOf="@id/btnGsearch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id = "@+id/btnGsearch"
        android:text = "구글 검색 하기"
        app:layout_constraintTop_toBottomOf="@id/btnGmap"
        app:layout_constraintBottom_toTopOf="@id/btnSms"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id = "@+id/btnSms"
        android:text = "문자 보내기"
        app:layout_constraintTop_toBottomOf="@id/btnGsearch"
        app:layout_constraintBottom_toTopOf="@id/btnPhoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id = "@+id/btnPhoto"
        android:text = "사진 찍기"
        app:layout_constraintTop_toBottomOf="@id/btnSms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>